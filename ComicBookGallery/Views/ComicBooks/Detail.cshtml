@model ComicBookGallery.Models.ComicBook

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Tite = Model.DisplayText;
}

<div>
    <h1>@Model.SeriesTitle </ h1 >
    <h2>Issue #@Model.IssueNumber </ h2 >

    <h4>@Html.Raw(Model.DescriptionHtml)</h4>
    @if (Model.Artists.Length>0)
    {
        <h5>Artists:</h5>
        <div>
            <ul>
                @foreach (var artist in Model.Artists)
                {
                    <li><text>@artist.Role: @artist.Name</text></li>
                }
            </ul>
        </div>
    }            
</div>